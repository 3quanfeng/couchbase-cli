#!/usr/bin/env python
# -*- coding: utf-8 -*-

"""
membase.py

This program is the top level source file for the Membase Command Line Tools
"""

import getopt
import sys
from listservers import *
from buckets import *
from node import *
from membase_info import *
from restclient import *

if __name__ == '__main__':
    (cluster, user, password) = ('', '', '')
    debug = False;

    # if no options provided, then give the user usage()
    if len(sys.argv) == 1:
        usage()

    try:
        (opts, args) = getopt.getopt(sys.argv[2:],
                                     'a:b:c:de:gdho:p:r:sv', [
                'help',
                'cluster=',
                'debug',
                'password=',
                'user=',
                'output=',
                'stats',
                'server-add=',
                'server-add-username=',
                'server-add-password=',
                'server-remove=',
                'server-remove-username=',
                'server-remove-password=',
                'verbose'
                ])
        cmd = sys.argv[1]
    except getopt.GetoptError, err:
        usage(err)

    # check if usage specified

    for (o, a) in opts:
        if o in ('-c', '--cluster'):
            cluster = a
        if o in ('-d', '--debug'):
            debug = True
        if o in ('-h', '--help'):
            usage()
        if o in ('-p', '--password'):
            password = a
        if o in ('-u', '--user'):
            user = a
        if o in ('-v', '--verbose'):
            verbose = True

    if not cluster:
        usage("You must specify at least two things: command, "
              "and cluster (--cluster)"
              )
    try:
        server, port = cluster.split(':')
        port = int(port)
    except ValueError:
        usage()

    if not user:
        user = ''
    if not password:
        password = ''

    # these are the commands which map to the classes
    # the contain the implementation of that particular
    # command

    commands = {
        'server-list'       : Listservers,
        'bucket-list'       : Buckets,
        'bucket-details'    : Buckets,
        'bucket-stats'      : Buckets,
        'bucket-create'     : Buckets,
        'bucket-delete'     : Buckets,
        'bucket-flush'      : Buckets,
        'server-add'        : Node,
        'rebalance'         : Node,
        'rebalance-stop'    : Node,
        'rebalance-status'  : Node,
        'eject-server'      : Node,
        'failover'          : Node,
        }

    # make sure the command is defined

    if cmd not in commands:
        err_message = "command: '%s' not found" % cmd
        usage(err_message)

    # instantiate

    taskrunner = commands[cmd]()

    # call runCmd method

    taskrunner.runCmd(cmd, server, port, user, password, opts)
